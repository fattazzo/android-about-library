<resources>

    <style name="AppThemeAndroidLibrary" parent="Theme.AppCompat.Light" />

    <style name="AndroidLibraryTextAppearance" parent="@android:style/TextAppearance" />

    <style name="AndroidLibraryTextAppearance.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/aboutlibrary_font_size_large</item>
    </style>

    <style name="AndroidLibraryTextAppearance.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/aboutlibrary_font_size_medium</item>
    </style>

    <style name="AndroidLibraryTextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/aboutlibrary_font_size_small</item>
    </style>

    <style name="AndroidLibraryTextAppearance.Big" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/aboutlibrary_font_size_big</item>
    </style>

    <style name="AndroidLibraryCollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="AndroidLibraryCollapsingTextAppearance.Inverse">
        <item name="android:textSize">@dimen/aboutlibrary_font_size_large</item>
        <item name="android:textColor">@color/aboutlibrary_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
